{
  "name": "@joemaddalone/filets",
  "version": "1.1.0",
  "description": "A TypeScript file management library",
  "license": "MIT",
  "author": "Joe Maddalone",
  "types": "dist/index.d.ts",
  "main": "dist/index.js",
  "module": "dist/esm/index.js",
  "cjs": "dist/index.cjs",
  "iife": "dist/iife/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/index.cjs",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "postbuild": "cp dist/index.js dist/index.cjs",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "coverage": "vitest run --coverage",
    "clean": "rm -rf dist"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joemaddalone/filets.git"
  },
  "devDependencies": {
    "@types/node": "^25.0.8",
    "@vitest/coverage-v8": "^3.2.4",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}